        var pie = d3.pie()
            .value(data => data.value)
        var data_ready = pie(d3.entries(DATA2))
        var color = 'yellow';
        container
            .selectAll('groups')
            .data(data_ready)
            .enter()
            .append('path')
            .attr('d', d3.arc()

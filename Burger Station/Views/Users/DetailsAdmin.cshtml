                if (color == 'pink') { color = 'purple'; return 'pink'; }
                if (color == 'purple') { color = 'lime'; return 'purple'; }
                if (color == 'lime') { color = 'teal'; return 'lime'; }
                if (color == 'teal') { color = 'coral'; return 'teal'; }
                else {return 'coral'}
            })
            .attr("stroke", "black")
            .style("stroke-width", "2px")
            .style("opacity", 0.7);

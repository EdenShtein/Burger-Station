@model Burger_Station.Models.Comment

@{
    ViewData["Title"] = "";
}

<h1>Create</h1>

<h4>Comment</h4>
<hr />
<head>

    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="~/css/menu/create.css">
</head>
<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="Items" class="control-label"></label>
                        <select name="ItemId" class="form-control" asp-items="@ViewBag.Items"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostTitle" class="control-label"></label>
                        <input asp-for="PostTitle" class="form-control" />
                        <span asp-validation-for="PostTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostBody" class="control-label"></label>
                        <input asp-for="PostBody" class="form-control" />
                        <span asp-validation-for="PostBody" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostedBy" class="control-label"></label>
                        @ViewBag.userName
                        <span asp-validation-for="PostedBy" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

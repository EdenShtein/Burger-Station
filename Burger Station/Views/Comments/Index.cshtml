@model IEnumerable<Burger_Station.Models.Comment>

@{
    ViewData["Title"] = "";
}
    <div class="head">
        <h1 id="index title">Comments</h1>

        <p>
            @if (ViewBag.userType == "Admin")
            {
                <a asp-action="Create">Create New</a>
            }
        </p>
    </div>
@{int sign = 1; }
@foreach (var item in Model)
{
    @if (sign == 1)
    {
        sign = 0;
<div class="container">
    <img src="~/images/img_avatar2.png" alt="Avatar" style="width:90px">
    <p><span>@Html.DisplayFor(modelItem => item.PostTitle)</span>  @Html.DisplayFor(modelItem => item.PostedBy)</p>
    <p>@Html.DisplayFor(modelItem => item.PostBody)</p>
    <div class="editadd">
        @if (ViewBag.userType == "Admin")
        {
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> @Html.Raw("|")
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> @Html.Raw("|")
        }
        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
    </div>
</div>
    }
    else
    {
        sign = 1;
        <div class="container">
            <img src="~/images/flat-faces-icons-circle-man-1.png" alt="Avatar" style="width:90px">
            <p><span>@Html.DisplayFor(modelItem => item.PostTitle)</span>  @Html.DisplayFor(modelItem => item.PostedBy)</p>
            <p>@Html.DisplayFor(modelItem => item.PostBody)</p>
            <div class="editadd">
                @if (ViewBag.userType == "Admin")
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> @Html.Raw("|")
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> @Html.Raw("|")
                }
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </div>
        </div>
    }
}
@section Styles {
    <link rel="stylesheet" href="~/css/comments.css" />
}
@model Burger_Station.Models.Branch

@{
    ViewData["Title"] = "Edit";
}

<html>
<head>

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/Create_Delete.css">

</head>
<body>
    <!-- ======= Top Bar ======= -->
    <section id="topbar" class="d-none d-lg-flex align-items-center fixed-top topbar-transparent">
        <div class="container text-right">
        </div>
    </section>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex align-items-center">

            <div class="logo mr-auto">
                <h1 class="text-light"><a href="\Home"><span>Burger Station</span></a></h1>
            </div>

            <nav class="nav-menu d-none d-lg-block">
                <form asp-action="Details">
                    <input type="hidden" asp-for="Id" />
                    <input class="btn float-right clicked-btn" type="submit" value="Back" />
                </form>
            </nav><!-- .nav-menu -->

        </div>
    </header><!-- End Header -->

    <section></section>
    <section></section>


    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Edit Item</h3>
                </div>
                <div class="card-body">
                    <form class="Item" asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                
                            </div>
                            <select class="form-control" asp-for="City" asp-items="@Html.GetEnumSelectList<City>()"></select>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            
                            <select class="form-control" asp-for="District" asp-items="@Html.GetEnumSelectList<District>()"></select>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <label for="ItemId" class="control-label"></label>
                            <select name="ItemId" class="form-control" asp-items="ViewBag.ItemsId" multiple></select>
                        </div>
                        <div class="btn-c">
                            <input type="submit" value="Save" class="btn float-right clicked-btn" />
                        </div>

                        @*<div class="form-group">
                            <input type="submit" value="Create" class="btn float-right clicked-btn">
                        </div>*@
                    </form>
                </div>

            </div>
        </div>
    </div>


</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/style.css" />
}




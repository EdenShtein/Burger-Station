@model Burger_Station.Models.Item

@{
    ViewData["Title"] = "Create";
}



<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<!DOCTYPE html>
<html>
<head>

    

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/Login.css">
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Create a new dish</h3>
                </div>
                <div class="card-body">
                    <form class="Item" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="input-group form-group">
                            <label asp-for="Type" class="control-label">Type  </label>
                            <select class="form-control" asp-for="Type" asp-items="@Html.GetEnumSelectList<ItemType>()"></select>
                        </div>
                        <div class="input-group form-group">
                            <label asp-for="Name" class="control-label">Name  </label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="input-group form-group">
                            <label asp-for="Price" class="control-label">Price  </label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn float-right login_btn">
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
